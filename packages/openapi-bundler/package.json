{
  "name": "@dasaplan/openapi-bundler",
  "version": "1.2.2",
  "description": "Opinionated bundler/merger for Openapi (Swagger)",
  "keywords": [
    "openapi",
    "typescript",
    "ts",
    "zod",
    "codegen"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dasaplan/ts-mono.git",
    "directory": "packages/openapi-bundler"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "openapi-bundler-cli": "dist/oa-bundler-cli.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "pnpm rup",
    "clean": "rimraf dist",
    "lint": "eslint \"./src/*.ts\" index.ts oa-bundler-cli.ts",
    "lint:fix": "eslint \"./src/*.ts\" index.ts oa-bundler-cli.ts --fix",
    "prepack": "sort-package-json --quiet && clean-package",
    "postpack": "clean-package restore",
    "rup": "tsup-node --dts",
    "test": "vitest",
    "test:it": "echo vitest --project integration-test",
    "test:unit": "vitest --project unit-test",
    "test:update": "vitest -u"
  },
  "dependencies": {
    "camelcase": "^8.0.0",
    "commander": "^14.0.2",
    "json-schema-merge-allof": "^0.8.1",
    "jsonpath": "^1.1.1",
    "jsonpointer": "^5.0.1",
    "lodash": "^4.17.21",
    "merge-json-schemas": "^1.0.0",
    "openapi3-ts": "^4.5.0",
    "tslog": "^4.10.2"
  },
  "devDependencies": {
    "@dasaplan/ts-sdk": "workspace:*",
    "@types/json-schema-merge-allof": "^0.6.5",
    "@types/jsonpath": "^0.2.4",
    "@types/lodash": "^4.17.20",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "openapi-example-specs": "workspace:*",
    "tsconfig": "workspace:*",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@redocly/openapi-core": "^1.6.0"
  },
  "clean-package": {
    "remove": [
      "scripts",
      "devDependencies",
      "tsup",
      "clean-package",
      "dependencies.@dasaplan/ts-sdk"
    ]
  },
  "tsup": {
    "entry": [
      "index.ts",
      "oa-bundler-cli.ts"
    ],
    "noExternal": [
      "@dasaplan/ts-sdk",
      "tsconfig"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "tsconfig": "tsconfig.build.json",
    "clean": true,
    "sourcemap": true
  }
}
