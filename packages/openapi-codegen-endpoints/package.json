{
  "name": "@dasaplan/openapi-codegen-endpoints",
  "version": "1.2.3",
  "description": "Openapi framework agnostic endpoint generator",
  "keywords": [
    "openapi",
    "typescript",
    "ts",
    "zod",
    "codegen"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dasaplan/ts-mono.git",
    "directory": "packages/openapi-codegen-zod"
  },
  "author": "dsp",
  "type": "module",
  "exports": {
    "./dist/templates/*": "./templates/*",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "oa-endpoint-generator": "dist/endpoint-cli.js",
    "oaendpoint": "dist/endpoint-cli.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "run-s rup cp:templates",
    "clean": "rimraf dist out tmp",
    "cp:templates": "copyfiles -u 1 \"templates/**/*\" dist/templates",
    "lint": "eslint \"./src/*.ts\" index.ts endpoint-cli.ts",
    "lint:fix": "eslint \"./src/*.ts\" index.ts endpoint-cli.ts --fix",
    "prepack": "sort-package-json --quiet && clean-package",
    "pack": "pnpm pack",
    "postpack": "clean-package restore",
    "rup": "tsup-node --dts",
    "test": "vitest endpoint-generator.test.ts",
    "test:it": "echo vitest --project integration-test",
    "test:unit": "vitest --project unit-test",
    "test:update": "vitest -u",
    "ts:build": "tsc -p tsconfig.build.json",
    "ts:check": "tsc",
    "ts:check:generated": "tsc -p tsconfig.generated.json"
  },
  "dependencies": {
    "@dasaplan/openapi-bundler": "workspace:*",
    "@dasaplan/ts-sdk": "workspace:*",
    "@rtk-query/codegen-openapi": "^2.1.0",
    "@ts-morph/common": "^0.28.1",
    "commander": "^14.0.2",
    "pascal-case": "^4.0.0",
    "ts-morph": "^27.0.2",
    "tslog": "^4.10.2"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.9.2",
    "@types/express": "^5.0.5",
    "@types/pascal-case": "^1.1.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "clean-package": "^2.2.0",
    "eslint": "^9.39.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "express": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "openapi-example-specs": "workspace:*",
    "openapi3-ts": "^4.5.0",
    "sort-package-json": "^3.4.0",
    "tsconfig": "workspace:*",
    "type-fest": "^5.1.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@openapitools/openapi-generator-cli": "^2.7.0"
  },
  "clean-package": {
    "remove": [
      "scripts.build",
      "scripts.clean",
      "scripts.lint",
      "scripts.lint:fix",
      "scripts.lint:prepack",
      "scripts.lint:rup",
      "scripts.lint:test",
      "scripts.lint:test:it",
      "scripts.lint:test:unit",
      "scripts.lint:test:update",
      "devDependencies",
      "tsup",
      "clean-package",
      "dependencies.@dasaplan/ts-sdk"
    ]
  },
  "tsup": {
    "entry": [
      "index.ts",
      "endpoint-cli.ts"
    ],
    "noExternal": [
      "@dasaplan/ts-sdk",
      "tsconfig"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "tsconfig": "tsconfig.build.json",
    "clean": true,
    "sourcemap": true
  }
}
