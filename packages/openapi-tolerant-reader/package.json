{
  "name": "@dasaplan/openapi-tolerant-reader",
  "version": "0.2.3",
  "description": "Openapi solutions to support tolerant reader.",
  "keywords": [
    "openapi",
    "typescript",
    "ts",
    "zod",
    "codegen"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dasaplan/ts-mono.git",
    "directory": "packages/openapi-tolerant-reader"
  },
  "author": "dsp",
  "type": "module",
  "exports": {
    "./dist/templates/*": "./templates/*",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "run-s rup",
    "clean": "rimraf dist out tmp",
    "lint": "eslint \"./src/*.ts\" index.ts",
    "lint:fix": "eslint \"./src/*.ts\" index.ts --fix",
    "prepack": "sort-package-json --quiet && clean-package",
    "pack": "pnpm pack",
    "postpack": "clean-package restore",
    "rup": "tsup-node --dts",
    "test": "vitest",
    "test:it": "echo vitest --project integration-test",
    "test:unit": "vitest --project unit-test",
    "test:update": "vitest -u",
    "ts:build": "tsc -p tsconfig.build.json",
    "ts:check": "tsc"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "clean-package": "^2.2.0",
    "eslint": "^9.39.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "npm-run-all": "^4.1.5",
    "sort-package-json": "^3.4.0",
    "tsconfig": "workspace:*",
    "typescript": "^5.9.3"
  },
  "clean-package": {
    "remove": [
      "scripts",
      "devDependencies",
      "tsup",
      "clean-package",
      "dependencies.@dasaplan/ts-sdk"
    ]
  },
  "tsup": {
    "entry": [
      "index.ts"
    ],
    "noExternal": [
      "@dasaplan/ts-sdk",
      "tsconfig"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "tsconfig": "tsconfig.build.json",
    "clean": true,
    "sourcemap": true
  }
}
