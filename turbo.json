{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [ "src/**/*.ts" ],
      "outputs": ["dist/**"]
    },
    "publish": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "inputs": [ "src/**/*.ts" ]
    },
    "test": {
      "inputs": [ "src/**/*.ts" ]
    },
    "test:update": {
      "inputs": [ "src/**/*.ts.snap" ]
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": [
    "tsconfig.json"
  ]
}