{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/*.md"]
    },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "verifyAccess": false,
      "skipScripts": true,
      "ignoreScripts": true
    }
  }
}

