{
  "name": "root",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:rebuild": "turbo clean & turbo build --force",
    "ws:build": "turbo build",
    "ws:test": "turbo test",
    "ws:test:update": "turbo test:update --force",
    "ws:test:unit:update": "turbo test:unit:update --force",
    "ws:test:it:update": "turbo test:it:update --force",
    "ws:lint": "turbo lint",
    "ws:clean": "turbo clean",
    "local:publish": "changeset version && pnpm ci:commit",
    "local:publish-packages": "pnpm ci:build && pnpm local:publish",
    "ci:build": "turbo run build lint test",
    "ci:build:only": "turbo run build",
    "ci:commit": "git commit -am \"chore: release\"",
    "ci:publish": "pnpm publish -r --no-git-checks",
    "semantic-release": "pnpm semantic-release:mono",
    "semantic-release:dry": "pnpm semantic-release:mono --dry-run",
    "semantic-release:mono": "pnpm -r --workspace-concurrency=1 exec -- npx --no-install semantic-release --branches update --dry-run -e semantic-release-monorepo"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@redocly/openapi-core": "^1.34.2",
    "@types/lodash": "4.14.202",
    "@types/node": "22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "axios": "^1.8.4",
    "clean-package": "^2.2.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-promise": "^7.2.1",
    "execa": "^9.5.2",
    "hereby": "^1.10.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "prettier": "3.5.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.3",
    "semantic-release-monorepo": "^8.0.2",
    "sort-package-json": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.15",
    "tsup": "^8.4.0",
    "turbo": "^2.5.0",
    "type-fest": "^4.39.1",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1",
    "zod": "^3.24.2"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.1.4"
}
