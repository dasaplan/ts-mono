{
  "name": "root",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build:rebuild": "turbo clean & turbo build --force",
    "ws:build": "turbo build",
    "ws:test": "turbo test",
    "ws:test:update": "turbo test:update",
    "ws:lint": "turbo lint",
    "ws:clean": "turbo clean",
    "local:publish": "changeset version && pnpm ci:commit && changeset publish",
    "local:publish-packages": "pnpm ci:build && pnpm local:publish",
    "ci:build": "turbo run build lint test",
    "ci:commit": "git commit -am \"chore: release\"",
    "ci:publish": "pnpm publish -r",
    "test": "pnpm test:esm",
    "test:esm": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:update": "pnpm test:esm:update",
    "test:esm:update": "cross-env NODE_OPTIONS=--experimental-vm-modules jest -u"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "@types/node": "^20.10.4",
    "@typescript-eslint/parser": "^6.20.0",
    "clean-package": "^2.2.0",
    "@redocly/openapi-core": "^1.18.0q",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "execa": "^8.0.1",
    "hereby": "^1.8.8",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "sort-package-json": "^2.10.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.1.0",
    "turbo": "^2.0.3",
    "type-fest": "^4.9.0",
    "typescript": "^5.5.3",
    "vitest": "^2.0.3",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.1.4"
}
