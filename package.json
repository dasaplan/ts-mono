    "@changesets/cli": "^2.29.7",
    "@redocly/openapi-core": "^2.10.0",
    "@types/node": "^24.9.2",
    "@typescript-eslint/parser": "^8.46.2",
    "clean-package": "^2.2.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "execa": "^9.6.0",
